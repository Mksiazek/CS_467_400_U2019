

<form action="update-user-attributes" method="post">
    <div>
        <label for="firstName">First Name: </label>
        <input type="text" name="firstName" id="firstName" value="{{row.FirstName}}" required>
    </div>
    <div>
        <label for="lastName">Last Name: </label>
        <input type="text" name="lastName" id="lastName" value="{{row.LastName}}" required>
    </div>
    <div>
        <label for="email">Email: </label>
        <input type="email" name="email" id="email" value="{{row.Email}}" required>
    </div>

    <p>User Type:</p>

    <div>
        <input type="radio" id="standard" name="user" value="standard" {{#unless row.IsAdmin}} checked {{/unless}}>
        <label for="standard">Standard</label>
    </div>

    <div>
        <input type="radio" id="admin" name="user" value="admin" {{#if row.IsAdmin}} checked {{/if}}>
        <label for="admin">Administrator</label>
    </div>

    <div>
        <input type="submit" value="Update User Information">
    </div>
</form>




<form action="update-user-password" method="post">
    <div>
        <label for="password">Password: </label>
        <input type="password" name="password" id="password" required minlength="8" maxlength="20">
    </div>
    <div>
        <input type="submit" value="Update User Password">
    </div>
</form>

{{#unless row.IsAdmin}} 
<div>
    <h4>User Signature</h4>
    <img src="/images/{{row.Signature}}">

    <form action="updateSignature" method="post">
        <input id="id" name="id" type="hidden" value={{row.Id}}>
        <input type="submit" value="Upload New Signature File">
    </form>

</div>
{{/unless}} 

